<h1><%= @product.name %></h1>

<%= link_to 'Edit', edit_product_path %> |
<%= link_to 'Delete', product_path, method: :delete, data: {confirm: "Are you sure you want to delete this product?"} %>

<p>Description: <%= @product.description %></p>
<p>Price: <%= @product.price_in_dollars %></p>


<h2>Reviews</h2>

<%= render 'list_reviews', product: @product %>

<h2>Add Comment</h2>

<%= render 'reviews/form', product: @product, review: @review %>
