
<h1>List of Products</h1>

<%= link_to 'New Product', new_product_path %>

<% @products.each do |product| %>
  <section>
    <h2><%= product.name %></h2>
    <p>Description: <%= product.description %></p>
    <p>Price: <%= product.price %></p>
    <%= link_to 'Show', product_path(product) %>
  </section>
<% end %>
